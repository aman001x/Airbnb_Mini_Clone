<% layout("/layouts/boilerplate") %>

<h1 class="text-center mt-2">Welcome To <span style="color: #182fc5;">Wonderlust</span></h1>
<div class="row mt-5 mb-4 col-8 offset-2" style="border: 1px solid rgb(51, 19, 210);">
    <h2 class="text-center mt-1" style="color: #182fc5; "  >SignUp</h2>
    <div class="col-8 offset-2">
        <form action="/signup" method="POST" class="needs-validation" novalidate  >
            <label for="username" class="form-label">Username</label><br>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-user-plus fa-xl" style="color: #005eff;"></i></span>
                <input type="text" name="username" class="form-control"id="username" placeholder="Enter Name" aria-label="Username" aria-describedby="basic-addon1" required>
              </div>



              <label for="email" class="form-label">Email</label><br>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-envelope fa-xl" style="color: #ff0000;"></i></span>
                <input type="email" name="email" class="form-control"id="email" placeholder="Enter Email" aria-label="Username" aria-describedby="basic-addon1" required>
              </div>


              
              <label for="password" class="form-label">Password</label><br>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-unlock fa-xl" style="color: #2235c9;"></i></span>
                <input type="password" name="password" class="form-control"id="email" placeholder="Enter Paasword" aria-label="Username" aria-describedby="basic-addon1" required>
              </div>

              <button class="btn btn-outline-primary mt-3 mb-5 px-3 "> SignUp</button>

        </form>

    </div>
</div>    