<% layout("/layouts/boilerplate") -%>
<body>
  <div class="row ">
    <div class="col-8 offset-3">
      <h3 class="mt-2" style="color: rgb(31, 40, 219);"><%= listing.title %></h2>
    </div>

    <div class="card col-6 offset-3 listing-card">
      <!-- Ensure listing.image is an object and has a URL -->
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image">
      <div class="card-body">
       
      
     
      </div>
    </div>
    
    <ul class="ul fs-5">
      
        <li>Owned by <i><b><%= listing.owner.username %></b></i></li>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        <li>&#8377; <%= listing.price.toLocaleString("en-IN") %></li>
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
      
    </ul>
    <br><br>
    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="btns mb-1">
      <a class="btn btn-outline-primary px-3 me-3" href="/listings/<%= listing._id %>/edit">Edit</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display: inline;">
        <button class="btn btn-outline-dark px-2" type="submit">Delete</button>
      </form>
    </div>
    <% } %>
    
    
    <hr class="mt-2">
    <div class="mb-3 mt-3" >
      <h3>Leave A Review</h3>
      <form action="/listings/<%= listing.id %>/reviews" method="post" class="col-6 needs-validation" novalidate >
        <!-- <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div> -->
        <div class="mb-3 mt-3">
          <h5>Rating</h5>
        <fieldset class="starability-slot">
          
         
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1"/>
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2"/>
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3"/>
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4"/>
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5"/>
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
        
      </div>


        <div>
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" class="form-control"required></textarea>
          <div class="invalid-feedback">Please submit some comments for review</div>
        </div>
        <button class="btn btn-outline-primary mt-2 mb-2">Submit</button>
      </form>
      <hr>
      <!-- <ul>
        
        <% for(review of listing.reviews){ %>
        <li> <%= review.comment%> , <%= review.rating %> Stars</li>
        <% } %>
        
      </ul> -->
      
      <h4 style="color: rgb(247, 139, 39);">All Reviews</h4>
      <div class="row  col-12 column-gap-3" >
        
        <% for(review of listing.reviews){ %>
          
          <div class="card-review card col-5 g-4 ms-1 " style="display: flex;">
          <div class="card-body">
            <h5 class="card-title pt-1 ms-2">Alice parker</h5>
            <p class="starability-result card-text " data-rating="<%= review.rating %>">
           
            </p>
            <p class="card-text ms-2 ps-1"><%= review.comment %></p>
        
            
            <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id%>?_method=DELETE">
              <button class="btn btn-warning ">Delete</button>
            </form>
          </div>
        </div>
    
      <% } %>
         
    </div>

   </div> 



  <div class=" row col-10 offset-1 mb-5 mt-4">
<h3>Where You'll be</h3>
<div  id="map"></div>
  </div>
  <script>
    let mapToken = "<%= process.env.MAP_TOKEN%>";
    console.log(mapToken);
    mapboxgl.accessToken = mapToken;
   
      const map = new mapboxgl.Map({
          container: 'map', // container ID
          center: [	79.088860, 21.146633], // starting position [lng, lat]. Note that lat must be set between -90 and 90
          zoom: 9 // starting zoom
      });
  </script>
  </div>
</body>

